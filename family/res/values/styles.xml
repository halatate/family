<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- 通用 -->
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
        
    </style>

    <style name="radio_navigation_bar_bottom_tab">
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/radio_navigation_bar_bg</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="tab_title_text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="title_right_button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/title_button_width</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="title_left_button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/title_button_width</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="home_kt_button" parent="@android:style/Widget.Button">
        <item name="android:layout_height">@dimen/kt_button_height</item>
        <item name="android:layout_width">@dimen/kt_button_width</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
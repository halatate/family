<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 1 & 4-->
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ff000000" />
        </shape>
    </item>
    <!-- 2 -->
    <item
        android:bottom="1px"
        android:top="1px">
        <shape android:shape="rectangle" >
            <solid android:color="#ff677081" />
        </shape>
    </item>
    <!-- 3 -->
    <item
        android:bottom="1px"
        android:top="2px">
        <shape android:shape="rectangle" >
            <solid android:color="#ff495666" />
        </shape>
    </item>
    <item
        android:bottom="2px"
        android:top="2px">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#ff3c4350"
                android:startColor="#ff2c343f" />
        </shape>
    </item>

</layer-list>